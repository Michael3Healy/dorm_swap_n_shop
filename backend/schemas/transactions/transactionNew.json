{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "postId",
        "buyerUsername",
        "sellerUsername",
        "price"
    ],
    "properties": {
        "postId": {
            "type": "integer",
            "default": 0,
            "title": "The postId Schema",
            "examples": [
                123
            ]
        },
        "buyerUsername": {
            "type": "string",
            "default": "",
            "title": "The buyerUsername Schema",
            "examples": [
                "buyer123"
            ]
        },
        "sellerUsername": {
            "type": "string",
            "default": "",
            "title": "The sellerUsername Schema",
            "examples": [
                "seller456"
            ]
        },
        "price": {
            "type": "number",
            "default": 0.0,
            "title": "The price Schema",
            "examples": [
                49.99
            ]
        }
    },
    "additionalProperties": false
}